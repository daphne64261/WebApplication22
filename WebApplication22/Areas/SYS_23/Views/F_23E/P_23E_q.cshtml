@model IEnumerable<WebApplication22.Areas.SYS_23.Models.MonthlyClose>
@{
    int this_year = (int)ViewBag.this_year;
    int previous_year = this_year - 1;
    int next_year = this_year + 1;
}
<table class="table table-bordered table-hover table-responsive-sm table-condensed" cellpadding="0" cellspacing="0">
    <thead class="thead-dark text-center">
        <tr>
            <th colspan="3">
                <button onclick="window.location.href='@Url.Action("P_23E_q", "F_23E", new {this_year = previous_year })'">
                    <i class="fa fa-arrow-left"></i>
                </button>
                &nbsp; &nbsp; @this_year 年 &nbsp; &nbsp; 每月結單統計表查印 &nbsp; &nbsp;
                <button onclick="window.location.href='@Url.Action("P_23E_q", "F_23E", new {this_year = next_year })'">
                    <i class="fa fa-arrow-right"></i>
                </button>
            </th>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Y)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.M)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Count1)
            </th>
        </tr>
    </thead>
    <tbody class="text-center">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Y)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.M)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Count1)
                    &nbsp; &nbsp;
                    <button onclick="window.location.href='@Url.Action("Report", "F_23E", new {report_year = item.Y, report_month = item.M })'">
                        <i class="fa fa-file-text"></i>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
