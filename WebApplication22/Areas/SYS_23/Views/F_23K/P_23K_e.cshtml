@model List<Data.Models.ISODOC>

@using (Html.BeginForm("Save", "F_23K", FormMethod.Post))
{
    <table id="ISODOC_table" class="table table-bordered table-hover table-responsive-sm">
        <thead class="thead-dark">
            <tr>
                <th class="text-left" Colspan=7>ISO文件一覽表編修</th>
            </tr>
            <tr>
                <th class="text-center" style="vertical-align:middle; width:10%" Rowspan=4>@Html.LabelFor(model => model[0].The_No)</th>
                <th class="text-center" style="vertical-align:middle; width:20%" Rowspan=4>@Html.LabelFor(model => model[0].The_Name)</th>
                <th class="text-center" Colspan=5>版 次 ／發 行 日 期</th>
            </tr>
            <tr>
                <th class="text-center" style="width:14%">@Html.LabelFor(model => model[0].v1)</th>
                <th class="text-center" style="width:14%">@Html.LabelFor(model => model[0].v2)</th>
                <th class="text-center" style="width:14%">@Html.LabelFor(model => model[0].v3)</th>
                <th class="text-center" style="width:14%">@Html.LabelFor(model => model[0].v4)</th>
                <th class="text-center" style="width:14%">@Html.LabelFor(model => model[0].v5)</th>
            </tr>
            <tr>
                <th class="text-center" style="width:14%">@Html.LabelFor(model => model[0].v6)</th>
                <th class="text-center" style="width:14%">@Html.LabelFor(model => model[0].v7)</th>
                <th class="text-center" style="width:14%">@Html.LabelFor(model => model[0].v8)</th>
                <th class="text-center" style="width:14%">@Html.LabelFor(model => model[0].v9)</th>
                <th class="text-center" style="width:14%">@Html.LabelFor(model => model[0].v10)</th>
            </tr>
            <tr>
                <th class="text-center" style="width:14%">@Html.LabelFor(model => model[0].v11)</th>
                <th class="text-center" style="width:14%">@Html.LabelFor(model => model[0].v12)</th>
                <th class="text-center" style="width:14%">@Html.LabelFor(model => model[0].v13)</th>
                <th class="text-center" style="width:14%">@Html.LabelFor(model => model[0].v14)</th>
                <th class="text-center" style="width:14%">@Html.LabelFor(model => model[0].v15)</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td class="text-center" style="vertical-align:middle" Rowspan=3>
                        @Html.HiddenFor(model => model[i].The_Kind)
                        @Html.HiddenFor(model => model[i].The_No)
                        @Html.DisplayFor(model => model[i].The_No)
                    </td>
                    <td class="text-left" style="vertical-align:middle" Rowspan=3>
                        @Html.EditorFor(model => model[i].The_Name, new { htmlAttributes = new { @class = "" } })
                    </td>
                    <td class="text-right">1. @Html.EditorFor(model => model[i].v1, new { htmlAttributes = new { id = "v1_" + i, @class = "datepicker", @type = "text" } })</td>
                    <td class="text-right">2. @Html.EditorFor(model => model[i].v2, new { htmlAttributes = new { id = "v2_" + i, @class = "datepicker", @type = "text" } })</td>
