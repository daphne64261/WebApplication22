                    <td class="text-right">12. @Html.EditorFor(model => model[i].v12, new { htmlAttributes = new { id = "v12_" + i, @class = "datepicker", @type = "text" } })</td>
                    <td class="text-right">13. @Html.EditorFor(model => model[i].v13, new { htmlAttributes = new { id = "v13_" + i, @class = "datepicker", @type = "text" } })</td>
                    <td class="text-right">14. @Html.EditorFor(model => model[i].v14, new { htmlAttributes = new { id = "v14_" + i, @class = "datepicker", @type = "text" } })</td>
